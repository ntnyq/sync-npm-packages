{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "ESNext"],
    "moduleDetection": "force",
    "module": "ESNext",
    "isolatedDeclarations": true,
    "moduleResolution": "Bundler",
    "types": ["node"],
    "resolveJsonModule": true,
    "declaration": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/"]
}
