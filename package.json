{
  "name": "sync-npm-packages",
  "type": "module",
  "version": "0.0.2",
  "packageManager": "pnpm@9.15.3",
  "description": "Sync released npm packages to a mirror site.",
  "keywords": [
    "npm",
    "npmmirror",
    "package",
    "registry",
    "release",
    "sync"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/sync-npm-packages#readme",
  "repository": "ntnyq/sync-npm-packages",
  "bugs": {
    "url": "https://github.com/ntnyq/sync-npm-packages/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./bin.mjs",
  "files": [
    "bin.mjs",
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch src",
    "lint": "eslint .",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:publish release:sync",
    "release:check": "run-s lint typecheck test",
    "release:publish": "bumpp && pnpm publish",
    "release:sync": "npx sync-npm-packages --target npmmirror",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "tinyglobby": "^0.2.10",
    "tinyrainbow": "^1.2.0"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^3.11.0",
    "@ntnyq/prettier-config": "^1.22.1",
    "@types/node": "^22.10.5",
    "bumpp": "^9.9.2",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^3.0.0-beta.3"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,json,md,yml,yaml}": "eslint --fix"
  }
}
