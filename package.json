{
  "name": "sync-npm-packages",
  "type": "module",
  "version": "0.2.0",
  "packageManager": "pnpm@10.28.0",
  "description": "Sync released npm packages to a mirror site.",
  "keywords": [
    "npm",
    "npmmirror",
    "package",
    "registry",
    "release",
    "sync"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/sync-npm-packages#readme",
  "repository": "ntnyq/sync-npm-packages",
  "bugs": {
    "url": "https://github.com/ntnyq/sync-npm-packages/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": "./bin.mjs",
  "files": [
    "bin.mjs",
    "dist",
    "schemas"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version release:sync",
    "release:check": "run-s lint typecheck",
    "release:sync": "npx sync-npm-packages --target npmmirror",
    "release:version": "bumpp",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "tinyglobby": "^0.2.15",
    "tinyrainbow": "^3.0.3",
    "unconfig": "^7.4.2"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^5.9.0",
    "@ntnyq/prettier-config": "^3.0.1",
    "@ntnyq/utils": "^0.11.0",
    "@types/node": "^25.0.9",
    "bumpp": "^10.4.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "nano-staged": "^0.9.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.8.0",
    "tsdown": "^0.19.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,yml,yaml,json}": "eslint --fix"
  }
}
